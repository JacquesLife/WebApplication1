@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - KhumaloCraft</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="text-container">
            <div class="text-center text-black">
                <h1 class="display-4">Login</h1>
                <p>Here at Khumalo Craft, we care about your Privacy and will safeguard your data in compliance with industry standards. We will not sell your data to third-party companies, nor will we email you without your consent. At KhumaloCraft, we put the customer first, always.</p>
            </div>
            <form asp-controller="Login" asp-action="Privacy" method="post">
                <p>Please enter your Name and Email to login.</p>
                <input type="text" name="name" placeholder="Name" required>
                <input type="email" name="email" placeholder="example@email.com" required>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="text-container mt-1">
            <div class="text-center text-black">
            <h2>How we handle your data</h2>
                <div class="row justify-content-center">
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="~/images/SIEM.jpg" class="img-fluid rounded mx-auto d-block" style="width: 600px; height: 200px;" alt="Image 1">
                            <div class="card-body">
                            <h5 class="card-title">How we ensure your security</h5>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>


                       

